{
  "executable": "Sidekick.Presentation.Blazor.Electron",
  "splashscreen": {
    "imageFile": "/Assets/splashscreen.png"
  },
  "name": "Sidekick",
  "author": "Sidekick",
  "homepage": "https://github.com/domialex/Sidekick",
  "singleInstance": true,
  "build": {
    "appId": "com.sidekick.app",
    "productName": "Sidekick",
    "buildVersion": "2.0.0",
    "compression": "maximum",
    "artifactName": "Sidekick-Setup.${ext}",
    "win": {
      "icon": "../../../Assets/icon.ico",
      "publish": [
        {
          "provider": "github",
          "owner": "domialex",
          "repo": "Sidekick"
        }
      ]
    },
    "directories": {
      "output": "../../../bin/Desktop",
      "buildResources": "Assets"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}
