<UserControl
    x:Class="Sidekick.Views.Leagues.Delve.Fossil"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sidekick.Views.Leagues.Delve"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        Name="Container"
        BorderBrush="Black"
        BorderThickness="0,0,0,1">
        <Border BorderBrush="{Binding Path=Color}" BorderThickness="5,0,0,0">
            <WrapPanel>
                <TextBlock Padding="4,2,0,2" Text="{Binding Path=Name}" />
                <TextBlock
                    Name="BehindFracturedWall"
                    Padding="4,2,0,2"
                    Text="*" />
            </WrapPanel>
        </Border>
    </Border>
</UserControl>
