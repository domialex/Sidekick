<UserControl
    x:Class="Sidekick.Windows.Settings.UserControls.KeybindEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sidekick="clr-namespace:Sidekick.Controls">
    <UserControl.Resources>
        <ResourceDictionary Source="/Styles/Main.xaml" />
    </UserControl.Resources>

    <StackPanel>
        <Grid x:Name="Grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Content="{Binding Label}" />
            <Button
                Grid.Column="1"
                Background="{Binding BackgroundColor}"
                Click="HotkeyButton_Click"
                Content="{Binding Value}" />
            <Button
                Grid.Column="2"
                Background="{Binding BackgroundColor}"
                Click="ClearButton_Click"
                Content="X"
                Style="{StaticResource ButtonSmall}" />
        </Grid>
        <sidekick:Spacer />
    </StackPanel>
</UserControl>
